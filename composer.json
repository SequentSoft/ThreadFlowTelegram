{
    "name": "sequentsoft/threadflow-telegram",
    "description": "A telegram channel for ThreadFlow",
    "keywords": [
        "php",
        "messenger",
        "bot",
        "laravel",
        "framework",
        "telegram"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Serhii Litvinchuk",
            "email": "sergiy.litvinchuk@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "sequentsoft/threadflow": "^0.0.2",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.8.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SequentSoft\\ThreadFlowTelegram\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SequentSoft\\ThreadFlowTelegram\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "phpcs",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
